{
  "mcpServers": {
    "chrome-devtools": {
      "timeout": 60000,
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest"
      ],
      "disabled": false,
      "description": "Chrome 浏览器控制 - 可以打开网页、点击、输入、截图等"
    },
    "filesystem": {
      "timeout": 60000,
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
